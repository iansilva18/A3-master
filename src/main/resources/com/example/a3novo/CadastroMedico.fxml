<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.a3novo.CadastroMedicoController"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.171"
          alignment="CENTER"
          hgap="10"
          vgap="10">

    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nomeMedicoField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Especialidade:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="especialidadeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="CRM:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="crmField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Outros campos necessÃ¡rios -->

    <Button text="Salvar" onAction="#salvarCadastroMedico" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Voltar" onAction="#voltar" GridPane.columnIndex="5"/>

</GridPane>
